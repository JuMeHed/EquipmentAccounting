<Page x:Class="EquipmentAccounting.Views.AdminViews.SSDAddEditView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:EquipmentAccounting.Views.AdminViews"
      xmlns:converters="clr-namespace:EquipmentAccounting.Converters"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:vm="clr-namespace:EquipmentAccounting.ViewModels"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="1119"
      Title="SSDAddEditView">

    <Page.DataContext>
        <vm:SSDAddEditViewModel/>
    </Page.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="52*"/>
            <RowDefinition Height="241*"/>
            <RowDefinition Height="427*"/>
            <RowDefinition Height="80*"/>
        </Grid.RowDefinitions>
        <Border Background="#7E7F9C"
       CornerRadius="20"
       Grid.Row="1"
       Margin="10,10,10,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="695*"/>
                    <ColumnDefinition Width="404*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="37*"/>
                    <RowDefinition Height="54*"/>
                    <RowDefinition Height="59*"/>
                    <RowDefinition Height="71*"/>
                </Grid.RowDefinitions>
                <Label Content="Общая информация"
              Foreground="#E5EAF3"
              Grid.Row="0"
              FontFamily="Montserrat"
              FontSize="25" Margin="10,0,0,1" Grid.ColumnSpan="2"/>

                <TextBox x:Name="LoginTB"
                Grid.Row="1"
                materialDesign:HintAssist.Hint="Брэнд"
                BorderBrush="#E5EAF3"
                materialDesign:HintAssist.Foreground="#E5EAF3"
                Foreground="#E5EAF3"
                FontSize="20"
                Style="{StaticResource MaterialDesignFloatingHintTextBox}" 
                Margin="10,2,3,0"
                Text="{Binding CurrentComponent.Brand}"
                />

                <TextBox Grid.Row="1"
                materialDesign:HintAssist.Hint="Модель"
                BorderBrush="#E5EAF3"
                materialDesign:HintAssist.Foreground="#E5EAF3"
                Foreground="#E5EAF3"
                FontSize="20"
                Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                Margin="10,50,0,0"
                Grid.RowSpan="2"
                Text="{Binding CurrentComponent.Model}"/>

                <TextBox Grid.Row="3"
                materialDesign:HintAssist.Hint="Год выпуска"
                BorderBrush="#E5EAF3"
                materialDesign:HintAssist.Foreground="#E5EAF3"
                Foreground="#E5EAF3"
                FontSize="20"
                Style="{StaticResource MaterialDesignFloatingHintTextBox}" 
                Margin="10,0,3,15"
                Text="{Binding CurrentComponent.ReleaseYear}"/>

                <TextBox
           Style="{StaticResource MaterialDesignOutlinedTextBox}"
           materialDesign:HintAssist.Foreground="#07244C"
           BorderBrush="#E5EAF3"
           Foreground="#E5EAF3"
           Background="Transparent"
           FontSize="17"
           Margin="22,4,10,0"
           VerticalAlignment="Top"
           Grid.RowSpan="3"
           Grid.Column="1"
           Height="165"
           AcceptsReturn="True"
           TextWrapping="Wrap"
           VerticalScrollBarVisibility="Auto"
           materialDesign:HintAssist.Hint="Примечание" 
           Grid.Row="1"
           Text="{Binding CurrentComponent.Note}"
          />
            </Grid>
        </Border>

        <Border Background="#07244C" 
       Grid.Row="2"
       CornerRadius="20"
       Margin="10,10,10,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="74*"/>
                    <ColumnDefinition Width="1025*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="38"/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition Height="73.8"/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Label Content="Характеристики"
              Foreground="#E5EAF3"
              Grid.Row="0"
              FontFamily="Montserrat"
              FontSize="25"
              Margin="10,0,0,0" Grid.ColumnSpan="2"/>
                <Image  Height="64"
               Width="64"
               Stretch="UniformToFill"
               Grid.Row="1"
               Grid.Column="0" Source="/Resources/memory-card.png" Margin="5,6,5,4"/>
                <Image  Height="64"
               Width="64"
               Stretch="UniformToFill"
               Grid.Row="2"
               Grid.Column="0" Source="/Resources/digital-skills.png" Margin="5,4,5,6"/>
                <TextBox Grid.Row="1"
                materialDesign:HintAssist.Hint="Скорость чтения"
                BorderBrush="#E5EAF3"
                materialDesign:HintAssist.Foreground="#E5EAF3"
                Foreground="#E5EAF3"
                FontSize="20"
                Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                Margin="5,73,816,10" 
                Grid.RowSpan="2"
                Text="{Binding ConnectionInterfaces}" Grid.Column="1"/>
                <ComboBox
              Grid.Row="1"
              Foreground="#7E7F9C"
              BorderBrush="#E5EAF3"
              IsEditable="True"
              FontSize="17"
              materialDesign:HintAssist.HelperText="Объём памяти"
              Style="{StaticResource MaterialDesignFloatingHintComboBox}" 
              Margin="12,19,838,0"
              Height="38"
              SelectedValue="{Binding SelectedMotherBoardFormFactor}"
              ItemsSource="{Binding AvailableMotherboardFormFactors}" VerticalAlignment="Top" Grid.Column="1"/>
                <Image  Height="64"
                    Width="64"
                    Stretch="UniformToFill"
                    Grid.Row="2"
                    Grid.Column="1" Source="/Resources/feedback.png" Margin="230,4,731,6"/>
                <TextBox Grid.Row="2"
                    materialDesign:HintAssist.Hint="Скорость записи"
                    BorderBrush="#E5EAF3"
                    materialDesign:HintAssist.Foreground="#E5EAF3"
                    Foreground="#E5EAF3"
                    FontSize="20"
                    Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                    Margin="299,0,469,9"
                    Text="{Binding ConnectionInterfaces}" Grid.Column="1"/>
                <Image  Height="64"
                    Width="64"
                    Stretch="UniformToFill"
                    Grid.Row="3"
                    Grid.Column="0" Source="/Resources/thunderbolt.png" Margin="5,10,5,73" Grid.RowSpan="2"/>
                <TextBox Grid.Row="3"
                    materialDesign:HintAssist.Hint="Энергопотребление"
                    BorderBrush="#E5EAF3"
                    materialDesign:HintAssist.Foreground="#E5EAF3"
                    Foreground="#E5EAF3"
                    FontSize="20"
                    Style="{StaticResource MaterialDesignFloatingHintTextBox}" 
                    Grid.Column="1"
                    Margin="0,5,10,5"
                    Text="{Binding EnergyConsumption}"/>
                <Image  Height="64"
                    Width="64"
                    Stretch="UniformToFill"
                    Grid.Row="4"
                    Grid.Column="0" Source="/Resources/pulse.png" Margin="5,5,5,5"/>
                <TextBox Grid.Row="3"
                    materialDesign:HintAssist.Hint="Интерфейс подключения"
                    BorderBrush="#E5EAF3"
                    materialDesign:HintAssist.Foreground="#E5EAF3"
                    Foreground="#E5EAF3"
                    FontSize="20"
                    Style="{StaticResource MaterialDesignFloatingHintTextBox}" 
                    Grid.Column="1"
                    Margin="0,73,10,10" 
                    Grid.RowSpan="2"
                    Text="{Binding ConnectionInterfaces}"/>
            </Grid>

        </Border>
        <Label Content="SSD"
          FontFamily="Montserrat"
          FontSize="30"
          Foreground="#7E7F9C"
          Grid.Row="0"
          Margin="5,0,0,0"/>
        <Button Content="Сохранить"
       Background="#7671FA"
       Grid.Row="3"
       Foreground="#E5EAF3" Height="40" Width="300" Margin="809,20,10,20"
       Command="{Binding OpenSaveDialogCommand}" Cursor="Hand"/>
        <Button Content="Назад"
       Background="#7E7F9C"
       Grid.Row="3"
       Command="{Binding GoBackCommand}"
       Foreground="#E5EAF3" 
       Height="40" Width="300" Margin="504,20,315,20"
        IsEnabled="True" Cursor="Hand"/>
        <materialDesign:DialogHost IsOpen="{Binding IsExitDialogOpen}" 
                   Grid.RowSpan="4"
                   Grid.ColumnSpan="3"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Background="#7671FA">
            <materialDesign:DialogHost.DialogContent>
                <Border Background="#7671FA" Padding="20" CornerRadius="8" BorderBrush="Transparent">
                    <StackPanel Orientation="Vertical">
                        <Label Content="Вы уверены, что хотите выйти? Изменения не будут сохранены."
              Foreground="#E5EAF3" 
              FontSize="20" 
              Margin="0,0,0,16"/>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                            <Button Content="Отмена" 
                           Command="{Binding CloseDialogCommand}"
                           Foreground="#7671FA"
                           Background="#E5EAF3"
                           Margin="5" Cursor=""/>
                            <Button Content="Да" 
                           Command="{Binding ExitCommand}"
                           Foreground="#7671FA"
                           Background="#E5EAF3"
                           Margin="5"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </materialDesign:DialogHost.DialogContent>
        </materialDesign:DialogHost>

        <materialDesign:DialogHost IsOpen="{Binding IsSaveDialogOpen}" 
             Grid.RowSpan="4"
             Grid.ColumnSpan="3"
             HorizontalAlignment="Center"
             VerticalAlignment="Center"
             Background="#7671FA">
            <materialDesign:DialogHost.DialogContent>
                <Border Background="#7671FA" Padding="20" CornerRadius="8" BorderBrush="Transparent">
                    <StackPanel Orientation="Vertical">
                        <Label Content="Вы уверены, что хотите сохранить изменения?"
        Foreground="#E5EAF3" 
        FontSize="20" 
        Margin="0,0,0,16"/>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                            <Button Content="Отмена" 
                     Command="{Binding CloseDialogCommand}"
                     Foreground="#7671FA"
                     Background="#E5EAF3"
                     Margin="5" Cursor=""/>
                            <Button Content="Да" 
                     Command="{Binding SaveCommand}"
                     Foreground="#7671FA"
                     Background="#E5EAF3"
                     Margin="5"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </materialDesign:DialogHost.DialogContent>
        </materialDesign:DialogHost>
    </Grid>
</Page>
